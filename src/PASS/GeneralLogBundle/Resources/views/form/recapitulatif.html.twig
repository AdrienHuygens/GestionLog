{% extends "::base.html.twig" %}

{% block titrePage %}
    {{ titrePage }} {% endblock %}{# empty Twig template #}

    {% block contenu %}


         {% if ( is_granted("ROLE_GROUPE_ORDI_R") or is_granted("ROLE_ADMIN"))%}
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                     {% if ( is_granted("ROLE_GROUPE_ORDI_U") or is_granted("ROLE_ADMIN"))%}
                      <h3 class="panel-title ">{{ activiter }} {{ nom|capitalize }} <div class ="aligner"> <a href="{{ path(lien,{'listingId': id}) }}">modifier <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>   
                    {% endif %}
                     <a href="{{ path("PASS_GroupeOrdinateurListing") }}"> <span class="glyphicon glyphicon-th-list" title="retour au listing" aria-hidden="true"></a>
                     </div>  
                
                     </h3>
                     </div> 
                     <div class="panel-body">
                    
                    Les informations:
                    <br/>
                    <br/>
                     <table class="table col-lg-12 col-sm-8 col-xs-10">
                                {% for key,val in groupe %}
                             
                            <tr>    
                                
                                {% if loop.index is divisibleby(2) %}
                                     <td  class="col-lg-2">{{ key }}:</td>
                                     
                                    <td class="col-lg-8"> {{ val| raw  }}</td>
                                      
                                {% else %}
                                    <td class="active col-lg-2">{{ key }}:</td>
                                    
                                <td class="active col-lg-8"> {{ val| raw  }}</td>
                               
                                    
                                    {% endif %}
                                       
                            </tr>
                                   {% endfor %}    
                        </table>
         

                    </div>
                </div>
            </div>
                          {% endif %} 

    {% endblock %} 